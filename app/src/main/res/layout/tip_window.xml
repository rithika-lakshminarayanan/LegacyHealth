<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_marginStart="100dp"
    android:background="@color/orange_info"
    android:layout_marginTop="120dp"
    android:padding="5dp">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/symptom_img"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sym_name"
        app:layout_constraintTop_toBottomOf="@+id/symptom_img"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tip_heading"
        app:layout_constraintLeft_toRightOf="@+id/symptom_img"
        android:fontFamily="@font/lato_bold"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tip_body"
        android:fontFamily="@font/lato_light"
        app:layout_constraintLeft_toRightOf="@+id/sym_name"/>
    <ImageButton
        android:id="@+id/exit_btn"
        android:layout_width="8dp"
        android:tint="#ffffff"
        android:layout_height="8dp"
        android:layout_marginTop="195dp"
        android:layout_marginStart="210dp"
        android:background="@drawable/cross" />

</android.support.constraint.ConstraintLayout>