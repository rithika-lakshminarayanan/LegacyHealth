<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content" >
        <AutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="0dp"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:textColor="@color/black"
            android:background="@drawable/border_edit_text"
            android:layout_alignParentTop="true"
            android:id="@+id/zipcode"
            android:hint="@string/ziptext"
            android:fontFamily="@font/lato_light"
            android:textSize="14sp"
            android:completionThreshold="1"
            android:textColorHint="@color/hintcolor"
            android:paddingLeft="12.5dp"/>
    <com.google.android.gms.maps.MapView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/feeling_map"
        android:layout_below="@+id/zipcode"
        xmlns:android="http://schemas.android.com/apk/res/android" />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/my_recycler_view_feeling"
        android:layout_width="wrap_content"
        android:background="@drawable/rounded_corner"
        android:layout_above="@id/footer_feeling"
        android:elevation="12dp"
        android:outlineProvider="bounds"
        android:layout_height="wrap_content"
        android:layout_marginLeft="350dp"
        android:layout_marginBottom="15dp"
        android:orientation="vertical" />

    <RelativeLayout
        android:layout_width="260dp"
        android:layout_height="80dp"
        android:id="@+id/info_container_feeling"
        android:background="@drawable/rounded_corner_tooltip"
        android:layout_marginStart="80dp"
        android:layout_marginTop="70dp"
        android:padding="10dp">
        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:paddingTop="2dp"
            android:id="@+id/img_container"
            android:gravity="center"
            android:background="@color/orange_info"
            android:orientation="vertical">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/info_sym_pic"
                android:paddingTop="2dp"
                android:backgroundTint="@color/white"/>
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/tip_sym_name"
                android:layout_height="wrap_content"
                android:paddingTop="2dp"
                android:gravity="center_horizontal"
                android:fontFamily="@font/lato_bold"
                android:textSize="12sp"
                android:textColor="@color/white"/>
        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:id="@+id/line_separator"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_toRightOf="@+id/img_container"
            android:background="@color/white"/>
        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_toRightOf="@+id/line_separator"
            android:paddingLeft="5dp"
            android:layout_marginRight="10dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:layout_marginTop="4dp">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:fontFamily="@font/lato_bold"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:id="@+id/tip_heading"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tip_body"
                    android:fontFamily="@font/lato_regular"
                    android:textSize="12sp"
                    android:background="@color/orange_info"
                    android:layout_below="@+id/tip_heading"
                    android:textColor="@color/white" />
            </RelativeLayout>

        </ScrollView>
        <ImageButton
            android:id="@+id/tip_cross_btn"
            android:layout_width="11dp"
            android:backgroundTint="@color/white"
            android:layout_height="11dp"
            android:layout_marginLeft="10dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/cross"/>
    </RelativeLayout>

    <!-- Footer aligned to bottom -->
    <RelativeLayout
        android:id="@+id/footer_feeling"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_alignParentBottom="true"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:background="@color/orange_info">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:id="@+id/crsbtn_feeling"
            android:background="@drawable/cross"
            android:backgroundTint="@color/white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/how_ya_feeling"
            android:id="@+id/disptxt_feeling"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/klinic_slab_medium"
            android:textColor="@color/white"
            android:textSize="24sp"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/footer_feedback_feeling"
            android:padding="13dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/disptxt_feeling"
            android:layout_height="wrap_content"
            android:layout_width="match_parent" />

    </RelativeLayout>
</RelativeLayout>
