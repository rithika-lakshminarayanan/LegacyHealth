<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dp"
    android:layout_marginLeft="65dp"
    android:background="@color/orange_info"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:id="@+id/relLyt"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:paddingTop="7dp"
            android:id="@+id/rel_lyt2">
            <ImageView
                android:id="@+id/feeling_img"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/badge_text"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignRight="@+id/rel_lyt2"
            android:text="@string/badge_default_value"
            android:textColor="#FFF"
            android:textAlignment="center"
            android:textSize="8sp"
            android:textStyle="bold"
            android:background="@drawable/badge_circle"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/feeling_name"
        android:layout_width="wrap_content"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/symptom"
        android:fontFamily="@font/lato_regular"
        android:textSize="14sp"
        android:textColor="@color/white"/>


</LinearLayout>